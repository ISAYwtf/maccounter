{
  "name": "maccounter",
  "version": "0.0.1",
  "private": true,
  "repository": "https://github.com/ISAYwtf/maccounter",
  "author": "Iskander Aydynov <iskander.aydynov@mail.ru>",
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn run build:ts && yarn run build:d.ts && yarn run build:clean",
    "build:ts": "lerna exec --parallel 'BABEL_ENV=build babel ./ --root-mode upward --out-dir build  --copy-files --no-copy-ignored --extensions .ts,.tsx,.svg --delete-dir-on-start --no-comments'",
    "build:d.ts": "yarn run generate:declaration",
    "build:clean": "lerna exec --parallel 'rm -f build/tsconfig.json && rm -f build/*.log'",
    "generate:declaration": "lerna exec --parallel 'ttsc'",
    "publish": "yarn run build && lerna version && yarn run build && yarn run publish:prepare && lerna exec 'cd build && yarn publish --non-interactive' && yarn run publish:notify",
    "publish:prepare": "yarn run publish:prepare:packageJson",
    "publish:prepare:packageJson": "lerna exec --parallel 'node ../../scripts/utils/package/prepare.ts'",
    "publish:notify": "cd scripts/release-notifications && yarn run notify",
    "lint": "tsc --noEmit && eslint 'src/**'",
    "lint:fix": "yarn lint -- --fix",
    "lint:staged": "tsc --noEmit && eslint $(git diff --cached --name-only)",
    "lint:staged-fix": "yarn lint:staged -- --fix",
    "prepare": "husky install",
    "test": "BABEL_ENV=test lerna exec 'yarn jest --passWithNoTests'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "conventional-changelog-conventionalcommits": "^4.6.1",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "sass": "^1.35.2",
    "ts-node": "^10.2.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.2",
    "typescript-transform-paths": "^3.3.1",
    "web-vitals": "^2.1.2"
  }
}
